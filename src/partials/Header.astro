---

import { Icon } from 'astro-icon/components'

import SocialIcons from './SocialIcons.astro'

const {theme} = Astro.props

---

<header class={`text-${theme} py-5 h-1/3`}>
    <div class="w-5/6 mx-auto">

        <div class="flex justify-between">
            <label for="navigation" class="w-1/3 lg:hidden">
                <Icon name="open" class="text-[4rem] md:text-[4rem] lg:text-[5rem] cursor-pointer"/>
            </label>
            <input type="checkbox" class="hidden checkbox-menu" id="navigation">
            <nav class="lg:w-1/3 flex flex-col   uppercase fixed top-0 py-5 w-full h-full z-30 lg:bg-transparent lg:static bg-[#9C7E5A] lg:visible menu">
                <label for="navigation" class="hamburger lg:hidden responsive max-w-[30px]">
                    <Icon name="close" class="text-[4rem] md:text-[4rem] lg:text-[5rem] cursor-pointer"/>
                </label>
                <a href="/" class="text-[4rem] menu-link lg:hover:text-[#9C7E5A] hover:text-[#1D1D1D] transition ease-in-out delay-50">Главная</a>
                <a href="/about" class="text-[4rem] menu-link lg:hover:text-[#9C7E5A] hover:text-[#1D1D1D] transition ease-in-out delay-50">Информация</a>
                <a href="/projects" class="text-[4rem] menu-link lg:hover:text-[#9C7E5A] hover:text-[#1D1D1D] transition ease-in-out delay-50">Проекты</a>
                <a href="#contacts" class="text-[4rem] menu-link lg:hover:text-[#9C7E5A] hover:text-[#1D1D1D] transition ease-in-out delay-50">Контакты</a>
            </nav>

            
        
            <div class="w-full md:w-1/3 text-center z-20">
        
                <a href="/">
                    <h2 class="text-[4rem] md:text-[4rem] lg:text-[5rem] leading-[0.7] mt-6 font-[Dance]">
                        Русский Клуб
                    </h2>
                    <span class="text-[2rem] md:text-[2.5rem] lg:text-[2.5rem] uppercase tracking-wide">
                        Элитная мебель
                    </span>
                </a>
            </div>
        
            <div class="w-1/3">
                
                <div class="flex justify-end gap-4">
                    <SocialIcons />
                </div>

            </div>
        </div>

    </div>

</header>

<script>

    document.querySelectorAll('.menu-link').forEach(el => {
        el.addEventListener('click', () => {
            document.querySelector('.checkbox-menu').checked = false
        })
    })

</script>

<style>

    .menu {
        left: -100%;
        transition: all 0.5s;
    }

    #navigation:checked ~ .menu {
        left: 0;
    }

</style>