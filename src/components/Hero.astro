---

import Header from '../partials/Header.astro'

---

<section class="text-white bg-[#1D1D1D] py-5 h-screen min-h-screen">

    <Header />

    <div class="w-5/6 mx-auto h-1/3 flex items-center justify-between">
    
        <div>
            <h1 class="font-[Dance] text-[6rem] md:text-[8rem] leading-[5rem] w-full xl:w-15">Элитная мебель</h1>
            <p class="uppercase text-[2rem] md:text-[2rem] w-full xl:w-10/12">находим красоту, используя мастерство и опыт</p>
        </div>
        
    </div>

</section>

<style>

section {
    background-image: url('../images/hero.png');
    background-repeat: no-repeat;
    background-size: 1000px;
    background-position: 200% 70%;
    z-index: 20;
}

@media (max-width: 	1280px) {
    section {
        background-image: url('../images/hero_1.png');
    }


    
}

@media (max-width: 640px) {
  section {
    background-position: 100% 70%;
  }
}

</style>