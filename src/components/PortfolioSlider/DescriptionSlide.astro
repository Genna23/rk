---

import SocialIcons from "../../partials/SocialIcons.astro";

const {title, date, place, url} = Astro.props

---


    <div class="swiper-slide w-full">
        <div class="flex flex-col justify-between h-full">

            <div>
                <div><span class="font-bold">Объект: </span>{title}</div>
            <div><span class="font-bold">Год исполнения: </span> {date}</div>
            <div><span class="font-bold">Место: </span> {place}</div>
    
            <a
                href=`/${url}`
                class="uppercase font-bold text-[#9C7E5A]">Подробнее</a
            >
            </div>

            <div>
                <div class="flex gap-4">
                    <SocialIcons
                        links={{
                            instagram: "https://www.instagram.com/doorsellite/",
                            pinterest: "https://www.instagram.com/doorsellite/",
                        }}
                    />
                </div>
            </div>

        </div>
    </div>

   