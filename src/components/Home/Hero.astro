---
import Header from "../../partials/Header.astro";
---

<section class="text-white bg-[#1D1D1D] py-5 h-screen min-h-screen">
    <Header theme="white" />

    <div class="w-5/6 mx-auto h-1/3 flex items-center justify-between">
        <div>
            <!-- Заголовок h1 -->
            <h1 class="font-[Dance]   leading-[0.8] w-full xl:w-15">
                Элитная мебель
            </h1>
            <!-- Подзаголовок -->
            <p class="uppercase text-[2.5rem]  w-full xl:w-10/12">
                находим красоту, используя мастерство и опыт
            </p>
            <!-- Основной текст -->
            <p class="text-[1.6rem] ">Производим мебель с 1998г.</p>
        </div>
    </div>
</section>

<style>
    section {
        background-image: url("../../images/hero_1.png");
        background-repeat: no-repeat;
        background-size: 1000px;
        background-position: 150% 70%;
        z-index: 20;
    }

    @media (min-width: 1600px) {
        section {
            background-position: 120% 70%;
        }
    }

    @media (max-width: 1280px) {
        section {
            background-position: 100% 70%;
        }
    }

