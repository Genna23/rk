---

import { Picture } from "astro:assets";

import { getSizeFromUrl } from "../../../utils/utils";

const { slide } = Astro.props

const {description, image} = slide

const {filename, alt} = image

const {width, height} = getSizeFromUrl(filename)


---

<div class="w-full h-screen relative swiper-slide">
    <div>
        <Picture
            src={filename}
            formats={["avif", "webp"]}
            class="object-cover lg:max-h-screen min-h-screen brightness-[70%]"
            alt={alt}
            {width}
            {height}
        />
    </div>

    <div class="top-10 w-5/6 left-[calc(100%/12)] absolute">
        <div class="bg-white inline-block px-5">
            <h2 class="  font-[Dance]">
                Производство
            </h2>
        </div>

        <!-- <div class="bg-white block p-5 mt-10 xl:w-1/3 lg:w-1/2 w-full">
            <p>
                {description}
            </p>
        </div> -->
    </div>
</div>